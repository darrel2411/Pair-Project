<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Add Article Cloth</title>
</head>

<body style="background-color:burlywood">
    <%- include('partials/header'); %>

    <div class="col-12 text-center">
        <h4 class="mb-3">Edit New Article</h4>
        <form action="/edit/<%= post.id %>" method="post">
            <div class="row g-3" style="margin: 0 auto;">
                <div class="col-12">
                    <label for="title" class="form-label">Title</label><br>
                    <input type="text" class="form-control" name="title" value="<%= post.title %>">
                </div>

                <div class="col-12">
                    <label for="imageURL" class="form-label">Image Url</label><br>
                    <input type="text" class="form-control" name="imageURL" value="<%= post.imageURL %>">
                </div>

                <div class="col-12">
                    <label for="text" class="form-label"> Descriptions </label><br>
                    <input type="text" class="form-control" name="text" value="<%= post.text %>">
                </div>

                <div class="col-12">
                    <label for="CategoryId" class="form-label"> Category </label><br>
                    <select name="CategoryId">
                        <% categories.forEach(el => { %>
                        <option value=<%= el.id %> <%= post.CategoryId === el.id ? 'selected' : '' %>> <%= el.type %>
                        </option>
                        <% }); %>
                    </select>
                </div>

                <div class="col-12">
                    <label for="TagId" class="form-label"> Tag </label><br>
                    <select name="TagId">
                        <% tagPost.forEach(el => { %>
                        <% if(el.PostId === post.id) { %>
                        <%  tags.forEach(element => { %>
                        <%  if(element.id === el.TagId) { %>
                        <option selected value="<%= element.id %>"> <%= element.tagName %> </option>
                        <%  } else { %>
                        <option value="<%= element.id %>"> <%= element.tagName %> </option>
                        <% } %>
                        <%  }) %>
                        <% } %>
                        <% }); %>
                    </select>
                </div>
            </div>

            <button class="btn btn-primary mt-5" type="submit"> Edit </button>
        </form>
    </div>
</body>

</html>